<div class="container_right">
  <div class="active-pink-3 active-pink-4 mb-4 p-2">
    <form class="form-inline d-flex md-form form-sm mt-0 search" action="">
      <i class="fa fa-search" aria-hidden="true"></i>
      <input class="form-control form-control-sm ml-3 w-40" type="text" placeholder="<%=I18n.t("layout.search") %>" name="search" value="<%= @search %>">
    </form>
    <!-- <input class="form-control" id="input_book" type="text" placeholder="Search.."> -->
  </div>
  <div class="show_character">

  </div>
  <h2><p>Tất cả loại sách</p></h2>
  <div class="clear"></div>
  <div class="row">
    <% @books.each do |book|%>
      <div class="col-sm-3">

        <div class="col-product">
					<div class="col_product1">
						<a href="/show_book_detail/<%= book.id%>"><%= convert_ckeditor(book.image) %></a>
						<p><%= book.name.truncate(27)%></p>
						<h3><%= book.author.name%></h3>
						<div class="col_bottom">
							<button class="product1_bottom bor" data-id="<%= book.id%>" type="submit" name="muonsach">Mượn sách</button>
						</div>
					</div>
				</div>
      </div>
    <%end %>
    <div class="col align-self-center custom-pagi">
      <%= will_paginate @books, :class => "clearfix mt-4 ml-4 naviga"%>
    </div>
  </div>
</div>
