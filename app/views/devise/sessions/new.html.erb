<div class="main-login">
		<div class="tieude_giua">
			<h2><%= t("login.title")%></h2>
		</div>
		<div class="container-dangki">
			<div class="rown">
				<h1><%= t("login.title1")%></h1>
				<div class="login-container">
					<div class="login-container-detail">
						<div class="login-left">
							<div class="iner">
								<h2><%= t("login.content")%></h2>
								<div class="content1">
									<p><%= t("login.content1")%></p>
								</div>
							</div>
						</div>
						<div class="login-right">
							<div class="iner1">
								<h2><%= t('layout.login')%></h2>
								<form action="#" method="POST" accept-charset="utf-8">
									<ul class="form-dangki">

                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
										<li>
                        <div class="field">
                          <%= f.label "#{I18n.t('layout.email')}" %><br />
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "" %>
                        </div>
                      </li>
                      <li>
                        <div class="field">
                          <%= f.label "#{I18n.t('layout.password')}" %><br />
                          <%= f.password_field :password, autocomplete: "current-password", class: "" %>
                        </div>
                      </li>
                        <% if devise_mapping.rememberable? %>
												<div>
                            <%= f.check_box :remember_me %> <%= f.label "#{I18n.t('layout.remember')}" %>
												</div>
                        <% end %>
                        <li>
                          <div class="actions">
                            <%= f.submit "#{I18n.t('button.login')}", class: "btn-dangnhap" %>
                          </div>
                        </li>
                    <% end %>
									</ul>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
